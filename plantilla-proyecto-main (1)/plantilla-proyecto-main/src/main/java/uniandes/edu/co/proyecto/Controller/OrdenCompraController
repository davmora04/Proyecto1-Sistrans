package uniandes.edu.co.proyecto.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import uniandes.edu.co.proyecto.model.OrdenCompra;
import uniandes.edu.co.proyecto.repository.OrdenCompraRepository;

import java.util.Collection;

@Controller
public class OrdenCompraController {

    @Autowired
    private OrdenCompraRepository ordenCompraRepository;

    // Obtener todas las Ã³rdenes de compra
    @GetMapping("/ordencompra")
    public ResponseEntity<Iterable<OrdenCompra>> obtenerOrdenesCompra() {
        try {
            Collection<OrdenCompra> ordenes = ordenCompraRepository.findAll();
            return ResponseEntity.ok(ordenes);
        } catch (Exception e) {
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).build();
        }
    }

    // Crear una nueva orden de compra
    @PostMapping("/ordencompra/new/save")
    public ResponseEntity<?> guardarOrdenCompra(@RequestBody OrdenCompra ordenCompra) {
        try {
            ordenCompraRepository.insertarOrdenCompra(ordenCompra.getCantidad(), ordenCompra.getPrecioAcordado(), 
                ordenCompra.getFechaEspera(), ordenCompra.getEstado(), ordenCompra.getId_sucursal(),
                ordenCompra.getId_producto(), ordenCompra.getId_proveedor());
            
            return ResponseEntity.status(HttpStatus.CREATED).body("Orden de compra creada exitosamente");
        } catch (Exception e) {
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body("Error al crear la orden de compra");
        }
    }
}
